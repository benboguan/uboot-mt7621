/dts-v1/;
#include "mt7621.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "D-Link DIR-878 A1";
	compatible = "dlink,dir-878-a1", "mediatek,mt7621-soc";

	aliases {
		spi0 = &spi;
	};

	chosen {
		stdout-path = &uartlite0;
	};

	config {
		reset-button = "reset";
		wps-button = "wps";
		status1-led = "green:status";
		status2-led = "amber:status";
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 15 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};

		wifi {
			label = "wifi";
			gpios = <&gpio 7 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RFKILL>;
		};

		wps {
			label = "wps";
			gpios = <&gpio 18 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_WPS_BUTTON>;
		};
	};

	leds {
		compatible = "gpio-leds";

		status_amber {
			label = "amber:status";
			gpios = <&gpio 8 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		status_green {
			label = "green:status";
			gpios = <&gpio 16 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		wan_amber {
			label = "amber:wan";
			gpios = <&gpio 4 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		wan_green {
			label = "green:wan";
			gpios = <&gpio 3 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
	};
};

&pinctrl {
	state_default: pinmux_conf {
		spi {
			groups = "spi";
			function = "spi";
		};

		sdhci {
			groups = "sdhci";
			function = "gpio";
		};

		jtag {
			groups = "jtag";
			function = "gpio";
		};

		wdt {
			groups = "wdt";
			function = "gpio";
		};
	};
};

&gpio {
	status = "okay";
};

&i2c {
	gpios = <&gpio 3 1>, /* PIN3 as SDA */
		<&gpio 4 1>; /* PIN4 as CLK */
};

&spi {
	status = "okay";

	spi-max-frequency = <45000000>;

	spi-flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-flash";
		spi-max-frequency = <45000000>;
		reg = <0>;
	};
};

&uartlite0 {
	status = "okay";
};

&eth {
	status = "okay";
};
